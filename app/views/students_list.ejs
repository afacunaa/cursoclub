<%- include header.ejs %>

<main>
    <% if (students_list.length == 0) { %>
    <div class="container">
        <h4 class="i-corporate-green-text">Lista de usuarios</h4>
        <p >No hay ningun usuario</p>
    </div>
    <% } else { %>
    <div class="container">
        <h4 class="i-corporate-green-text">Lista de usuarios</h4>
        <table class="bordered highlight">
            <thead>
            <tr>
                <th><h5>Nombre del estudiante</h5></th>
                <th><h5>Nombre del usuario</h5></th>
                <th><h5>ID del estudiante</h5></th>
                <th><h5>Fecha de nacimiento</h5></th>
            </tr>
            </thead>
            <tbody>
            <% for (var i=0; i<students_list.length; i++) { %>
            <tr>
                <th><%= students_list[i].fullName %></th>
                <th><%= students_list[i].username %></th>
                <th><a href="<%= students_list[i].url%>"><%= students_list[i].id %></a></th>
                <th><%= students_list[i].nice_birthday %></th>
            </tr>
            <% } %>
            <% } %>
            </tbody>
        </table>
    </div>
</main>

<%- include footer.ejs %>