<%- include header.ejs %>

<main>
    <div class="container">
        <div class="row">
            <div class="center-align">
                <h4><strong><%= course.name.toUpperCase() %></strong></h4>
                <img class="responsive-img i-course-info-img" src="<%= course.picture %>">
                <p class="flow-text"><%= course.description %></p>
                <% if (course.requirement) { %>
                <h6>El curso requiere: <%= course.requirement %></h6>
                <%} else { %>
                <h6>Este curso no tiene requisitos</h6>
                <% } %>
            </div>
        </div>
    </div>
    <br>
    <div class="divider"></div>
    <br>
    <% if (user) { %>
        <% if (user.role === 3) { %>
        <%- include teacher_cards.ejs %>
        <% } else if (user.role === 2) { %>
    <div class="container">
        <div class="row">
            <h4>
                Tu perfil aparece en esta sección.
                <br>
                Con la cuenta de instructor no puedes solicitar clases.
            </h4>
        </div>
    </div>
        <% } else { %>
    <a class="btn" href="<%= course.short_url %>/update">Modificar</a>
    <% } } else { %>
        <p>Inicia sesión para ver detalles de los profesores</p>
    <% } %>
    <% if (course.category === 'Virtual') { %>
    <h5>Este curso es virtual</h5>
    <a href="<%= course.externalLink %>" target="_blank">Ir al sitio del curso</a>
    <% } %>
</main>

<%- include footer.ejs %>