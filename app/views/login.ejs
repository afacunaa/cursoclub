<%- include header.ejs %>

<main>
    <div class="container">
        <div class="row">
            <h4 class="cc-corporate-green-text cc-font-title">Inicio de sesión</h4>
            <form action="/login" method="post">
                <div class="col l6 m6 s12">
                    <% if (error.length > 0) { %>
                    <div class="row">
                        <div class="card red darken-4">
                            <div class="card-content white-text">
                                <p><i class="material-icons">report_problem</i> <%- error %></p>
                            </div>
                        </div>
                    </div>
                    <% } %>
                    <% if (success.length > 0) { %>
                    <div class="row">
                        <div class="card green darken-1">
                            <div class="card-content white-text">
                                <p><i class="material-icons">done</i> <%- success %></p>
                            </div>
                        </div>
                    </div>
                    <% } %>
                    <div class="row">
                        <div class="input-field">
                            <input class="validate" type="text" name="username" id="username" required autofocus>
                            <label for="username">Nombre de usuario</label>
                        </div>
                    </div>

                    <div class="row">
                        <div class="input-field">
                            <input class="validate" type="password" name="password" id="password" minlength="6" required>
                            <label for="password">Contraseña</label>
                        </div>
                    </div>
                    <div class="row">
                        <div class="input-field">
                            <input class="btn green" type="submit" value="Entrar">
                        </div>
                    </div>
                    <br>
                </div>
                <div class="col l6 m6 s12">
                    <p class="center">Utiliza Facebook para acceder</p>
                    <div class="center-align">
                        <a href="/auth/facebook" class="btn blue darken-3">Entrar con Facebook</a>
                    </div>
                </div>
            </form>
        </div>
        <br>
        <div id="signup" class="divider"></div>
        <br>
        <div class="row">
            <h4 class="cc-corporate-orange-text cc-font-title">Formulario de registro para usuarios</h4>
            <div class="row">
                <div class="card yellow lighten-2">
                    <div class="card-content">
                        <h5>
                            <i class="material-icons">warning</i> Si estas interesado en ser un instructor de Curso Club,
                            <a class="blue-text" href="/teacher/signup">haz clic aquí</a>
                        </h5>
                    </div>
                </div>
            </div>
            <form method="post" action="student/create">
                <div class="row">
                    <div class="input-field col l6 m6 s12">
                        <input type="text" name="firstname" id="firstname" required>
                        <label for="firstname">Nombre</label>
                    </div>
                    <div class="input-field col l6 m6 s12">
                        <input type="text" name="lastname" id="lastname" required>
                        <label for="lastname">Apellido</label>
                    </div>
                    <div class="input-field col l6 m6 s12">
                        <input type="text" name="address" id="address" required>
                        <label for="address">Dirección</label>
                    </div>
                    <div class="input-field col l6 m6 s12">
                        <input type="text" name="phone" id="phone" required>
                        <label for="phone">Teléfono</label>
                    </div>
                    <div class="input-field col l6 m6 s12">
                        <input class="datepicker" type="date" name="birthday" id="birthday" required>
                        <label for="birthday">Fecha de nacimiento</label>
                    </div>
                </div>
                <div class="row">
                    <div class="input-field col l4 m4 s12">
                        <input class="validate" type="email" name="email" id="email" required>
                        <label for="email">Correo electrónico</label>
                    </div>
                    <div class="input-field col l4 m4 s12">
                        <input class="validate" minlength="6" type="password" name="new_password" id="new_password" required>
                        <label for="new_password">Contraseña</label>
                    </div>
                    <div class="input-field col l4 m4 s12">
                        <input class="validate" minlength="6" type="password" name="password_confirmation" id="password_confirmation" required>
                        <label for="password_confirmation">Confirmar contraseña</label>
                        <span id="message"></span>
                    </div>
                </div>
                <div class="row">
                    <div class="input-field col l4 m4 s12">
                        <input name="subscription" id="subscription_switch" type="checkbox" value="true" checked>
                        <label for="subscription_switch">Recibir notificaciones por correo electrónico</label>
                    </div>
                </div>
                <div class="row">
                    <div class="input-field col l4 m4 s12">
                    <button class="btn green" type="submit">Registrarse</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</main>

<%- include footer.ejs %>