<%- include header.ejs %>

<main>
    <% if (teachers_list.length == 0) { %>
    <p>No hay ningun profesor</p>
    <% } else { %>
    <div class="container">
        <table class="bordered highlight">
            <thead>
            <tr>
                <th><h5>Nombre del profesor</h5></th>
                <th><h5>Nombre del usuario</h5></th>
                <th><h5>ID del profesor</h5></th>
                <th><h5>Fecha de nacimiento</h5></th>
            </tr>
            </thead>
            <tbody>
            <% for (var i=0; i<teachers_list.length; i++) { %>
            <tr>
                <th><%= teachers_list[i].fullName %></th>
                <th><%= teachers_list[i].username %></th>
                <th><a href="<%= teachers_list[i].url%>"><%= teachers_list[i].id %></a></th>
                <th><%= teachers_list[i].nice_birthday %></th>
            </tr>
            <% } %>
            <% } %>
            </tbody>
        </table>
    </div>
</main>

<%- include footer.ejs %>