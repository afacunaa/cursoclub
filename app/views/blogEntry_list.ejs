<%- include header.ejs %>

<main>
    <div class="container">
        <% if (user.role === 1) { %>
        <h5>Administración</h5>
        <a class="btn" href="/blog/create"><i class="material-icons left">library_add</i>Nueva entrada</a>
        <br>
        <br>
        <div class="divider"></div>
        <% } %>
        <table class="bordered highlight">
            <tr>
                <th>Fecha</th>
                <th>Título</th>
                <th>Autor</th>
                <th>Imagen</th>
            </tr>
            <% for (var i=0; i<blogEntry_list.length; i++) { %>
            <tr>
                <td><%=blogEntry_list[i].nice_created%></td>
                <td><a href="<%=blogEntry_list[i].url %>"><%=blogEntry_list[i].title%></a></td>
                <td><%=blogEntry_list[i].author%></td>
                <td><%=blogEntry_list[i].image%></td>
            </tr>
            <% } %>
        </table>
    </div>
</main>

<%- include footer.ejs %>