<%- include header.ejs %>

<main>

    <%- include env_buttons.ejs %>

    <%- include carousel.ejs %>

    <br>
    <br>
    <% if (environment !== 'v') { %>
    <div class="row">
        <div class="col l6 m6 s12">
            <%- include instructions.ejs %>
        </div>
        <div class="col l6 m6 s12">
            <%- include category_list.ejs %>
        </div>
    </div>




    <br>
    <div class="container">
        <h4 class="header center cc-corporate-green-text cc-font-title">Aprende m√°s sobre Curso Club</h4>
        <div class="video-container">
            <iframe width="560" height="315" src="https://www.youtube.com/embed/HWp5ljXyIN4" frameborder="0" allowfullscreen></iframe>
        </div>
    </div>
    <% } %>
    <% if (environment === 'v') { %>
    <br>
    <div class="row" align="center">
        <h4 class="cc-corporate-purple-text cc-font-title">Lista de cursos virtuales</h4>
        <% for (var i=0; i<courses_list.length; i++) { %>
            <% if (i % 3 === 0) { %>
        <div class="row">
            <% } %>
            <div class="col l4 m6 s12">
                <div class="card hoverable">
                    <div class="card-image">
                        <a href="<%= courses_list[i].url %>"><img src="<%= courses_list[i].picture %>"></a>
                <% if (user && user.role === 1) { %>
                        <a class="btn-floating btn-large halfway-fab waves-effect waves-light red" href="<%= courses_list[i].short_url %>/update"><i class="material-icons">mode_edit</i></a>
                <% } %>
                    </div>
                    <div class="card-content">
                        <span class="card-title"><%= courses_list[i].name %></span>
                        <p><%= courses_list[i].description %></p>
                    </div>
                    <div class="card-action">
                        <a class="green-text" href="<%= courses_list[i].url %>">Detalles</a>
                <% if (courses_list[i].category === 'Virtual') { %>
                        <a class="blue-text" href="<%= courses_list[i].externalLink %>">Ir al sitio del curso</a>
                <% } %>
                    </div>
                </div>
            </div>
            <%if (i % 3 === 2 || i === courses_list.length - 1) { %>
        </div>
            <% } %>
        <% } %>
    </div>
    <% } %>
</main>

<%- include footer.ejs %>